<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/fst_background">

    <com.applikeysolutions.cosmocalendar.view.CalendarView
        android:layout_width="match_parent"
        android:id="@+id/cosmo_calendar"
        android:layout_height="0dp"
        android:layout_weight="1.05"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.35"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="날짜"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:textColor="@color/white"/>

            <LinearLayout
                android:id="@+id/linear_date_single"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:gravity="center"

                >
                <ImageButton
                    android:id='@+id/button_date_single'
                    android:src="@drawable/image_calendar_single"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/transparent"


                    />
            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="50dp"
            android:layout_height="0dp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기간"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:textColor="@color/white"/>

            <LinearLayout
                android:id="@+id/linear_date_range"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/background_circle_orange"
                android:gravity="center"

                >
                <ImageButton
                    android:id='@+id/button_date_range'
                    android:src="@drawable/image_calendar_range"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/transparent"


                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.09"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_history"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.754" />
</LinearLayout>