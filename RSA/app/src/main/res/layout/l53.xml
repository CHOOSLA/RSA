<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fst_background"
    android:gravity="center"
    android:orientation="vertical" >
    
            <TextView
                android:id="@+id/l41_DayInterval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/button_interval"
                android:gravity="center"
                android:text="Day ~ Day"
                android:textSize="@dimen/day_interval_title_size" />

            <TextView
                android:id="@+id/l41name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="30dp"
                android:layout_marginTop="@dimen/button_interval" />
            <TextView
                android:id="@+id/l41time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="30dp"
                android:layout_marginTop="@dimen/button_interval" />
    
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/button_interval"
        android:layout_weight="1"
        android:gravity="center" >
        
            
        </LinearLayout>
            
    
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical" >


            <kr.ac.sch.oopsla.rsa.process.CustomGraphView2
                android:id="@+id/bview"
                android:layout_width="280dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:layout_weight="10"
                android:background="@drawable/ghrfin6" />
            
            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/box"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="5dp" >

                   	<LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_marginTop="18dp"
                        android:padding="5dp">
                        
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLength="15"
                            android:text="RSA"
                            android:textColor="@color/white"
                            android:textSize="@dimen/subtitle_size" />

                        <LinearLayout
                            android:layout_width="90dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/white_box"
                            android:gravity="center" >

                            <TextView
                                android:id="@+id/m3RSA"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/RED"
                                android:textSize="25sp" />
                        </LinearLayout>
                        
                        
                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_weight="1">
                    </LinearLayout>
                    
                    <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1" >

                    	<TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HR"
                        android:textColor="@color/white"
                        android:textSize="@dimen/subtitle_size" />

                    	<LinearLayout
                        android:layout_width="90dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:background="@drawable/white_box">

                        	<TextView
                            android:id="@+id/m3heartnum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/RED"
                            android:textSize="25sp" />
                    </LinearLayout>
                                        	
                </LinearLayout>
                   	</LinearLayout>
                   	
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >
                    
                            <ImageView
                            android:id="@+id/rsaimage"
                            android:layout_width="54dp"
                            android:layout_height="54dp"
                            android:src="@drawable/normall"
                            android:layout_marginTop="8dp"
                            android:gravity="center"/>
                                    
                            <TextView
                            android:id="@+id/m3evaluationRSA"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="NORMAL"
                            android:textColor="@color/RED"
                            android:textSize="22sp"
                            android:gravity="center" />
                                    
                   	                </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >
            </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="2"
                android:gravity="center" >

                <Button
                    android:id="@+id/l41back1"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/blue_rec_style"
                    android:text="Back"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/l41save1"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:background="@drawable/blue_rec_style"
                    android:text="Send"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>